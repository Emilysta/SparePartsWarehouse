<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <script type="text/javascript" src="~/js/site.js"></script>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Strona główna</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products">Produkty</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Orders">Złóż zamówienie</a>
                        </li>
                    </ul>
                </div>

                <div class="column" style="margin-right:40px">
                    <a class="text-dark" asp-area="" asp-page="/Cart">
                        <div class="row">
                            <img class="rounded mx-auto d-block" height="30" src="~/images/shoping_cart.png" />
                            <span class="badge badge-light" id="cartItemsNumber"></span>
                        </div>
                        <div class="row">
                            Koszyk
                        </div>
                        <script type="text/javascript">
                            var badge = document.getElementById("cartItemsNumber");
                            var count = getCookie("CartItemsCount");
                            badge.innerHTML = count;
                        </script>
                    </a>
                </div>
                <div class="column">
                    <a class="navbar-brand" asp-area="" asp-page="/Login" margin="10">Zaloguj</a>
                </div>

            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-muted position-sticky">
        <div class="container">
            &copy; 2021 - Strona stworzona na potrzeby kursu Bazy Danych w roku 2020/21 <br>
            <div align="right">Autorzy: Emilia Starczyk i Michał Kaleta</div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
