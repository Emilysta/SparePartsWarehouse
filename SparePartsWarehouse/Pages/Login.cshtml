@page
@using Microsoft.AspNetCore.Http;
@model SparePartsWarehouse.Pages.LoginModel
@{ ViewData["Title"] = "Login";
    if (HttpContext.Session.GetString("user") == "admin")
    {
        Layout = "_AdminLayout";
    }
    else
    {
        Layout = "_Layout";
    } }

<div class="container" style="max-width:500px">
    <div class="text-center font-weight-bolder" style="font-size:32px">Panel logowania</div>
    <form method="post" class="border" style="padding:20px">
        <div class="form-group">
            <label for="username"><b>Nazwa użytkownika</b></label>
            <input type="text" placeholder="Nazwa użytkownika" name="username" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="password"><b>Hasło</b></label>
            <input type="password" class="form-control" placeholder="Hasło..." name="password" required />
        </div>
        <br />
        <button class="btn btn-primary" type="submit">Zaloguj się</button>
        <button class="btn btn-danger" type="button">Anuluj</button>
    </form>
</div>